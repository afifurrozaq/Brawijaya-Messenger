<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:layout_marginRight="40dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/userpic"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/text_view_recipient_message"
            android:layout_toLeftOf="@+id/time_r"
            android:maxWidth="170dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Hi, joe how are you, do you like to join our party in next week because you don't like party?"
            android:textColor="@color/text_color_icon"
            android:textSize="14sp"
            android:background="@drawable/chat_you"/>
        <TextView
            android:id="@+id/time_r"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:text="5:04pm"
            android:textColor="@color/text_color_icon"
            android:textSize="12sp"
            android:layout_centerVertical="true"/>
    </LinearLayout>
</RelativeLayout>